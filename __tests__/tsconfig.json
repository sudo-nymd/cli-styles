{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "./**/*.ts"
  ]
}